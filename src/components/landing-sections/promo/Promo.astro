        </pattern>
        <pattern id="pattern1_1_9" patternContentUnits="objectBoundingBox" width="0.0166667" height="0.666666">
          <use xlink:href="#image0_1_9" transform="scale(0.000520833 0.0208333)"></use>
        </pattern>
        <clipPath id="clip0_1_9">
          <rect width="1920" height="49" fill="white"></rect>
        </clipPath>
        <image
          id="image0_1_9"
          width="32"
          height="32"
          xlink:href="data:image/png;base64,"
        />
