---
import Icon from '../icon/Icon.astro';
---

<div class="player flex items-center justify-center flex-col size-[4.15rem] bg-ex-firmcolor rounded-full">
  <div class="player__control">
    <div class="player__icon pl-1 flex items-center justify-center size-[1.6rem]">
      <Icon name="play" width="18px" height="22px" />
    </div>
  </div>

  <div class="player__label text-[0.66rem]">mp3</div>
</div>

<style>
  .player {
    width: theme(size.playerIconSize);
    height: theme(size.playerIconSize);

    &:hover {
      outline: 4px solid theme(colors.ex.firmcolor);
      box-shadow: inset 0 0 0px 3px theme(colors.ex.firmcolor);
    }
  }
</style>
